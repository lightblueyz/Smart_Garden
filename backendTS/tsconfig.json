{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2015"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["fastify"],
    "noErrorTruncation": true,
    "baseUrl": "./",  // Defina a baseUrl como raiz
    "paths": {
      "*": ["node_modules/*", "src/*"]  // Ajuste o caminho para o diret√≥rio src
    }
  }
}
